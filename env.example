# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# Channel ID where the bot will post updates (optional - can be set via !setchannel command)
# To get a channel ID: Right-click on a channel in Discord > Copy ID (Developer Mode must be enabled)
UPDATE_CHANNEL_ID=

# BFBC2 Server name to monitor (partial name matching)
BFBC2_SERVER_NAME=your_server_name_here

# Update interval in seconds (default: 120 = 2 minutes)
# Minimum recommended: 10 seconds to avoid API rate limits
UPDATE_INTERVAL_SECONDS=30 

